rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Usuarios - solo pueden editar su propio documento
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Validar que candiesTotal solo aumente
      allow update: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.data.candiesTotal >= resource.data.candiesTotal;
    }
    
    // Progreso - solo pueden editar su propio progreso
    match /progress/{progressId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.uid;
        
      // Validar que bestLevel solo aumente
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.uid &&
        request.resource.data.bestLevel >= resource.data.bestLevel;
    }
    
    // Nicks - solo lectura para verificar disponibilidad
    match /nicks/{nickId} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.uid == resource.data.uid;
    }
  }
}
