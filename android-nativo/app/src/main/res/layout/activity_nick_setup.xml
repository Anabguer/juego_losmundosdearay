<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Configurar Nick"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elige un nombre Ãºnico para aparecer en el ranking:"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/nick_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nick_hint"
        android:maxLength="20"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/save_nick_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_nick" />

</LinearLayout>




